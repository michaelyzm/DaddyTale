<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.michaelyzm.daddytale.BookNameEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_record_title"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Please input book name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_record_timer"
            android:textSize="25dp"
            android:text="00:00:00"
            android:textColor="#AA3322"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_record_start_button"
            android:text="Start"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:background="#CCCCCC"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_record_stop_button"
            android:text="Stop"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:background="#CCCCCC"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>